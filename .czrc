{
  "path": "cz-conventional-changelog",
  "types": {
    "feat": {
      "description": "New feature (added functionality per task)",
      "title": "Added"
    },
    "fix": {
      "description": "Bug fix (addressed an existing issue)",
      "title": "Fixed"
    },
    "infra": {
      "description": "Infrastructure changes (CI, configuration, scripts)",
      "title": "Infrastructure"
    },
    "refactor": {
      "description": "Refactor and other changes (documentation, tests, improvements)",
      "title": "Changed"
    },
    "chore":   {
      "description": "Maintenance tasks (dependency updates, build/config tweaks, CI/CD pipeline adjustments, Dockerfile changes)",
      "title": "Chores"
    },
    "BREAKING": {
      "description": "Breaking changes (introduce backwardâ€‘incompatible API changes)",
      "title": "Breaking Changes"
    }
  },
  "scopes": [],
  "allowCustomScopes": false,
  "allowBreakingChanges": [
    "feat",
    "fix",
    "infra",
    "refactor"
  ]
}
